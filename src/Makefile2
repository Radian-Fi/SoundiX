IDIR=../include
CXX=g++-7
CXXFLAGS=-I$(IDIR)

ODIR=obj
LDIR=../lib

LIBS=-lsndfile

_DEPS = lsndx.h
DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))

_OBJ = Open2.o FFT2.o
OBJ = $(patsubst %,$(ODIR)/%,$(_OBJ))

$(OBJ): $(ODIR)/%.o: %.cpp $(DEPS)
	$(CXX) -std=c++17 -c -o $@ $< $(CXXFLAGS)

SoundiX: $(OBJ)
	g++ -std=c++17 -o $@ $^ $(CXXFLAGS) $(LIBS)

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o *~ core $(INCDIR)/*~ 
